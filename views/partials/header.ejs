<script>
    // 1. Mobile Menu Toggle
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");
    const icon = btn.querySelector("i");

    // Prevent body scroll when menu is open
    const body = document.body;

    btn.addEventListener("click", () => {
        menu.classList.toggle("hidden");

        if (menu.classList.contains("hidden")) {
            // Menu Closed
            icon.classList.remove("fa-times");
            icon.classList.add("fa-bars");
            body.style.overflow = "auto"; // Re-enable scrolling
        } else {
            // Menu Open
            icon.classList.remove("fa-bars");
            icon.classList.add("fa-times");
            body.style.overflow = "hidden"; // Lock background scrolling
        }
    });

    // 2. Accordion Logic
    function toggleSubmenu(id, btnElement) {
        const submenu = document.getElementById(id);
        const arrow = btnElement.querySelector(".fa-chevron-down");

        if (submenu.classList.contains("hidden")) {
            // Open it
            submenu.classList.remove("hidden");
            arrow.style.transform = "rotate(180deg)";
            btnElement.classList.add("text-brand-blue"); // Highlight active title
        } else {
            // Close it
            submenu.classList.add("hidden");
            arrow.style.transform = "rotate(0deg)";
            btnElement.classList.remove("text-brand-blue");
        }
    }
</script>
